<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_height="match_parent"
        android:background="@color/colorSilverGrey"
        android:layout_width="match_parent">

    <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/map_picker"
            android:layout_margin="20dp"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/select_a_location"
            android:layout_height="wrap_content"/>

    <fragment
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="1"
            android:id="@+id/map_picker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_message"
            app:layout_constraintBottom_toTopOf="@id/bt_select"
            tools:context=".locationpicker.LocationPickerActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <Button
            android:id="@+id/bt_select"
            android:layout_width="wrap_content"
            android:text="@string/select"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/map_picker"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>


</android.support.constraint.ConstraintLayout>