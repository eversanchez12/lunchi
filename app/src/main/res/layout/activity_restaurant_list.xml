<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel"
                  type="com.sango.lunchi.restaurantslist.RestaurantsListViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".restaurantslist.RestaurantsListActivity">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_restaurants"
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:visibility="invisible"
                android:scrollbars="vertical"
                android:overScrollMode="never"
                android:scrollbarThumbVertical="@android:color/darker_gray"
                android:scrollbarSize="5dp"
                android:visibility="@{viewModel.listVisibility}"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                android:layout_height="match_parent"/>

        <android.support.design.widget.FloatingActionButton
                android:id="@+id/bt_location"
                android:layout_width="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="30dp"
                android:visibility="@{viewModel.floatingButtonVisibility}"
                android:onClick="@{()->viewModel.changeLocationClick()}"
                tools:visibility="invisible"
                android:layout_marginBottom="30dp"
                android:src="@drawable/ic_location_white"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"/>

        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{viewModel.progressBarVisibility}"
                tools:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <!--ERROR MESSAGE-->
        <TextView
                android:id="@+id/tv_error_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.errorMessage}"
                tools:text="Error message"
                android:gravity="center"
                android:layout_margin="30dp"
                android:textSize="16sp"
                android:visibility="@{viewModel.errorMessageVisibility}"
                tools:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <!--LOCATION ERROR MESSAGE-->
        <TextView
                android:id="@+id/tv_location_error_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/location_permission_denied_message"
                android:gravity="center"
                android:layout_margin="30dp"
                android:textSize="16sp"
                android:visibility="@{viewModel.errorLocationVisibility}"
                tools:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bt_retry_location"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintTop_toTopOf="parent"/>

        <Button
                android:id="@+id/bt_retry_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{viewModel.errorLocationVisibility}"
                android:onClick="@{()->viewModel.retryLocationClick()}"
                tools:visibility="invisible"
                android:text="@string/retry_location_permission"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_location_error_message"/>


    </android.support.constraint.ConstraintLayout>
</layout>
